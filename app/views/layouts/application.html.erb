<!DOCTYPE html>
<html>
<head>
  <title>Kpsc</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default navbar-static-top" style="margin-bottom:0px">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">KPSC Ranklist</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      
      <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
        </button>
      </form>
      
        <ul class="nav navbar-nav navbar-right">
            <li style="padding:12px;padding-right:50px;">
            <% if is_logged_in? %>
                <%= link_to image_tag("logout.png"), logout_url %>
            <% else %>
               <%= link_to image_tag("facebook.png"), "/auth/facebook", id: "sign_in" %>
            <% end %>
            </li>
        </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<div class="container">
 <div class="col-lg-12 col-sm-12"> 
    <div class="card hovercard">
        <div class="card-background">
        	<%= image_tag is_logged_in? ? current_user.image : "ID-10086141.jpg" %>
            <!-- http://lorempixel.com/850/280/people/9/ -->
        </div>
        <div class="useravatar">
        	<%= image_tag is_logged_in? ? current_user.image : "ID-10086141.jpg" %>
        </div>
        <div class="card-info"> <span class="card-title"><%= is_logged_in? ? current_user.name : "Guest User #{current_user.id}" %></span>

        </div>
    </div>
    <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
        <div class="btn-group" role="group">
            <button type="button" id="stars" class="btn btn-primary" href="#tab1" data-toggle="tab"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                <div class="hidden-xs">Exams</div>
            </button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" id="favorites" class="btn btn-default" href="#tab2" data-toggle="tab"><span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
                <div class="hidden-xs">Attempted</div>
            </button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" id="following" class="btn btn-default" href="#tab3" data-toggle="tab"><span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                <div class="hidden-xs">Acheivements</div>
            </button>
        </div>
    </div>
      <div class="well">
        <div class="tab-content">
           <div class="tab-pane fade in active" id="tab1">
             <%= yield %>
           </div>
      <div class="tab-pane fade in" id="tab2">
        <%= render partial: "attempts" %>
      </div>

      <div class="tab-pane fade in" id="tab3">
        <%= form_tag({:action => 'upload_data'}, :multipart => true, :name => 'upload_xlxs') do %>
           <label for="uploaded_file">File to Upload <%= file_field_tag 'uploaded_file', :accept => 'xls/xlxs'%></label>
           <%= submit_tag("Submit") %>
        <% end %>
      </div>
      </div>
      </div>
    
    </div>


</body>
</html>
</html>
